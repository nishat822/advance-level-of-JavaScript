<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Delegation & Bubbling Demo</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        ul { list-style: none; padding: 0; }
        li { padding: 8px 12px; margin: 4px 0; background: #f2f2f2; cursor: pointer; }
        li:hover { background: #d9d9d9; }
    </style>
</head>
<body>

    <h2>Todo List Example (Event Delegation)</h2>

    <input type="text" id="todo-input" placeholder="Enter task">
    <button id="add-btn">Add Task</button>

    <ul id="todo-list">
        <!-- ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶≤‡¶ø‡¶∏‡ßç‡¶ü ‡¶Ü‡¶á‡¶ü‡ßá‡¶Æ‡¶ó‡ßÅ‡¶≤‡ßã ‡¶°‡¶æ‡¶á‡¶®‡¶æ‡¶Æ‡¶ø‡¶ï‡¶≠‡¶æ‡¶¨‡ßá ‡¶Ø‡ßã‡¶ó ‡¶π‡¶¨‡ßá -->
    </ul>

    <script>
        // ---------------------------
        // üîπ DOM Elements
        // ---------------------------
        const input = document.getElementById('todo-input'); // ‡¶á‡¶®‡¶™‡ßÅ‡¶ü ‡¶¨‡¶ï‡ßç‡¶∏
        const addBtn = document.getElementById('add-btn');   // ‡¶è‡¶° ‡¶¨‡¶æ‡¶ü‡¶®
        const todoList = document.getElementById('todo-list'); // UL ‡¶≤‡¶ø‡¶∏‡ßç‡¶ü

        // ---------------------------
        // üîπ Add Task Function
        // ---------------------------
        addBtn.addEventListener('click', function() {
            const text = input.value.trim();
            if (text === "") return; // ‡¶Ø‡¶¶‡¶ø ‡¶á‡¶®‡¶™‡ßÅ‡¶ü ‡¶ñ‡¶æ‡¶≤‡¶ø ‡¶•‡¶æ‡¶ï‡ßá ‡¶§‡¶æ‡¶π‡¶≤‡ßá ‡¶ï‡¶ø‡¶õ‡ßÅ ‡¶π‡¶¨‡ßá ‡¶®‡¶æ

            const li = document.createElement('li'); // ‡¶®‡¶§‡ßÅ‡¶® ‡¶≤‡¶ø‡¶∏‡ßç‡¶ü ‡¶Ü‡¶á‡¶ü‡ßá‡¶Æ ‡¶§‡ßà‡¶∞‡¶ø
            li.innerText = text; // ‡¶ü‡ßá‡¶ï‡ßç‡¶∏‡¶ü ‡¶∏‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ

            todoList.appendChild(li); // UL ‡¶§‡ßá ‡¶Ø‡ßã‡¶ó ‡¶ï‡¶∞‡¶æ

            input.value = ""; // ‡¶á‡¶®‡¶™‡ßÅ‡¶ü ‡¶ï‡ßç‡¶≤‡¶ø‡ßü‡¶æ‡¶∞ ‡¶ï‡¶∞‡¶æ
        });

        // ---------------------------
        // üîπ Event Delegation Example
        // ---------------------------
        todoList.addEventListener('click', function(event) {
            // event.target = ‡¶Ø‡ßá‡¶á ‡¶≤‡¶ø‡¶∏‡ßç‡¶ü ‡¶Ü‡¶á‡¶ü‡ßá‡¶Æ‡ßá ‡¶ï‡ßç‡¶≤‡¶ø‡¶ï ‡¶π‡ßü‡ßá‡¶õ‡ßá
            if (event.target.tagName === 'LI') {
                // Event Bubbling ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø console log
                console.log('Clicked Item:', event.target.innerText);
                console.log('Listener On (this):', this);

                // ‡¶ï‡ßç‡¶≤‡¶ø‡¶ï ‡¶ï‡¶∞‡¶≤‡ßá ‡¶≤‡¶ø‡¶∏‡ßç‡¶ü ‡¶Ü‡¶á‡¶ü‡ßá‡¶Æ ‡¶∞‡¶ø‡¶Æ‡ßÅ‡¶≠ ‡¶π‡¶¨‡ßá
                event.target.remove();
            }
        });
        // üîπ Event Delegation for Single Click & Double Click
        // ---------------------------
        todoList.addEventListener('click', function(event) {
            // ‡¶∂‡ßÅ‡¶ß‡ßÅ LI ‡¶§‡ßá ‡¶ï‡ßç‡¶≤‡¶ø‡¶ï ‡¶π‡¶≤‡ßá ‡¶ï‡¶æ‡¶ú ‡¶ï‡¶∞‡¶¨‡ßá
            if (event.target.tagName === 'LI') {
                // Single click ‚Üí complete task
                event.target.classList.toggle('completed');

                // Console log ‡¶¶‡¶ø‡ßü‡ßá bubbling ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
                console.log('Clicked Item:', event.target.innerText);
                console.log('Listener On (this):', this); // UL
            }
        });

        // ---------------------------
        // üîπ Double Click ‚Üí Delete Task
        // ---------------------------
        todoList.addEventListener('dblclick', function(event) {
            if (event.target.tagName === 'LI') {
                event.target.remove();
                console.log('Deleted Item:', event.target.innerText);
            }
        });

        // ---------------------------
        // üîπ Explanation (Bangla)
        // ---------------------------
        /*
            1Ô∏è‚É£ LI ‡¶§‡ßá click ‡¶π‡¶≤‡ßá event bubble ‡¶π‡ßü‡ßá UL ‡¶è ‡¶Ü‡¶∏‡ßá
            2Ô∏è‚É£ ‡¶Ü‡¶Æ‡¶∞‡¶æ UL ‡¶è listener ‡¶¨‡¶∏‡¶ø‡ßü‡ßá‡¶õ‡¶ø ‚Üí ‡¶è‡¶ü‡¶æ‡¶ï‡ßá Event Delegation ‡¶¨‡¶≤‡ßá
            3Ô∏è‚É£ Single click ‚Üí toggle class 'completed' ‚Üí ‡¶ü‡ßá‡¶ï‡ßç‡¶∏‡¶ü green ‡¶ì strike-through
            4Ô∏è‚É£ Double click ‚Üí delete item
            5Ô∏è‚É£ event.target ‚Üí ‡¶Ü‡¶∏‡¶≤ element ‡¶Ø‡ßá‡¶ü‡¶ø‡¶§‡ßá click ‡¶π‡ßü‡ßá‡¶õ‡ßá
            6Ô∏è‚É£ this ‚Üí listener ‡¶ï‡ßã‡¶•‡¶æ‡ßü ‡¶¨‡¶∏‡¶æ‡¶®‡ßã ‡¶π‡ßü‡ßá‡¶õ‡ßá (UL)
            7Ô∏è‚É£ ‡¶®‡¶§‡ßÅ‡¶® LI add ‡¶ï‡¶∞‡¶≤‡ßá‡¶ì ‡¶ï‡¶æ‡¶ú ‡¶ï‡¶∞‡¶¨‡ßá ‡¶ï‡¶æ‡¶∞‡¶£ listener ‡¶∂‡ßÅ‡¶ß‡ßÅ parent UL ‡¶è ‡¶Ü‡¶õ‡ßá
        */

        // ---------------------------
        // üîπ Bubbling ‡¶¨‡ßç‡¶Ø‡¶æ‡¶ñ‡ßç‡¶Ø‡¶æ (Comment)
        // ---------------------------
        /*
            ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶¨‡ßã‡¶ù‡¶æ ‡¶Ø‡¶æ‡ßü:
            1Ô∏è‚É£ LI ‡¶§‡ßá click ‡¶π‡ßü
            2Ô∏è‚É£ Event Bubble ‡¶π‡ßü‡ßá UL (parent) ‡¶è ‡¶ö‡¶≤‡ßá ‡¶Ü‡¶∏‡ßá
            3Ô∏è‚É£ UL ‡¶§‡ßá listener ‡¶¨‡¶∏‡¶æ‡¶®‡ßã ‡¶Ü‡¶õ‡ßá
            4Ô∏è‚É£ event.target ‡¶¨‡¶≤‡ßá ‡¶¶‡ßá‡ßü ‡¶Ü‡¶∏‡¶≤‡ßá ‡¶ï‡ßã‡¶® element ‡¶è click ‡¶π‡ßü‡ßá‡¶õ‡ßá
            5Ô∏è‚É£ 'this' ‡¶¨‡¶≤‡ßá ‡¶¶‡ßá‡ßü listener ‡¶ï‡ßã‡¶® element ‡¶è ‡¶¨‡¶∏‡¶æ‡¶®‡ßã ‡¶π‡ßü‡ßá‡¶õ‡ßá (UL)
        */
    </script>

</body>
</html>